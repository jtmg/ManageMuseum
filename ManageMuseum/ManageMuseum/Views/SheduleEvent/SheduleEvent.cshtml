@using System.Web.Mvc.Html
@model ManageMuseum.Models.EventViewModel
@{
    Layout = "~/Views/Shared/_SpaceManagerSharedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/OurCSS.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
@using (Html.BeginForm())
{
    <form>
        <div class="container">
            <div class="form-container">
                <div>
                    <label > Nome: </label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="affix-row">
                    <label> Data de inicio: </label>
                    @Html.EditorFor(model => model.StartDate,new {htmlAttributes = new {@class = "form-control",@type ="date"}})
                </div>

                <div class="affix-row">
                    <label > Data de Fim: </label>
                    @Html.EditorFor(model => model.EnDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                </div>

                @*<div class="form-group">
                    <label >Lista de Espaços:</label>
                    @Html.DropDownListFor(model=>model.RoomId,(SelectList)ViewBag.ListSpaces, htmlAttributes: new { @class = "form-control"} )
                 </div>
                <div class="form-group">
                    <label >Tipo de Evento</label>
                    @Html.DropDownListFor(model=>model.RoomName,(SelectList)ViewBag.EventType, htmlAttributes: new { @class = "form-control"} )
                    
                </div>*@


                <label >Descrição:</label>
                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control",@rows = 5 })
                
                <div>
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </div>
    </form>
}
</body>
</html>
